<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/changepassword">

    <!-- Back Button at top-left -->
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â—„ Back"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#751A14"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="190dp"
                android:gravity="center"
                android:text="Password"
                android:textAlignment="center"
                android:textColor="@color/dark_red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="4dp" />

            <CheckBox
                android:id="@+id/checkBoxShowCurrentPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Current Password"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="4dp" />

            <CheckBox
                android:id="@+id/checkBoxShowNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show New Password"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="4dp" />

            <CheckBox
                android:id="@+id/checkBoxShowConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Confirm Password"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonConfirmChange"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@null"
                android:text="Change Password"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
